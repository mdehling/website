!!!

%html{lang: "en-US"}

  %head

    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}

    %title
      Malte Dehling
      = '[' + current_article.title + ']' unless current_article.nil?

    = stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity: "sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin: "anonymous"
    = stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css", integrity: "sha256-rzXMaro05QBd53CZ36ctTBp3FdKN3Ow0P0gDHcjLCLw=", crossorigin: "anonymous"
    = javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity: "sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin: "anonymous"

    - if current_page.data.stem
      = javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/mathjax/3.2.0/es5/tex-mml-svg.min.js", integrity: "sha512-lod3aTRkO5OUBZDRwWaaIGYAT6+2uSyrlwnj0sg1h9a1w5wJ7NnzkaiUWy4Jv5wdf1ixGX35HK6u7fP1pjYOQw==", crossorigin: "anonymous"

  %body

    %nav.navbar.navbar-expand-sm.navbar-light.bg-light.border-bottom
      .container-fluid
        = link_to 'Malte Dehling', '/', class: "navbar-brand"
        %button.navbar-toggler{ "data-bs-toggle" => "collapse",
                                "data-bs-target" => "#navbarContent" }
          %span.navbar-toggler-icon
        #navbarContent.collapse.navbar-collapse
          %ul.navbar-nav.ms-auto
            -#= partial "partials/li_nav_item",
            -#  locals: {link: "Blog", to: "/blog/"}
            = partial "partials/li_nav_item",
              locals: {link: "About", to: "/about/"}

    = yield
