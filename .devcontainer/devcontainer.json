{
	"name": "Ruby",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { 
			"VARIANT": "3.1-bullseye",
			"NODE_VERSION": "lts/*"
		}
	},

	// Set *default* container specific settings.json values on container create.
	"settings": {},

	"extensions": [
		"rebornix.Ruby"
	],
	
